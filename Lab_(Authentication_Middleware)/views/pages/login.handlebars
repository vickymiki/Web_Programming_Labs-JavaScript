<main>
    <h1>Login Form</h1>
    <div>
        <form action="/login" method="POST" id="login-form">
            <label>
                Username :
                <input placeholder="Username" id="username" name="username"/>
            </label>
            <label>
                Password :
                <input type="password" name="password" id="password"/>
            </label>
            <button type="submit" id="btn-id">Submit</button>
        </form>
    </div>

    <div id="error-div">
        <p class="error">{{error}}</p>
    </div>

    <a href="/signUp">Need to register? Click here to sign-up</a>
</main>